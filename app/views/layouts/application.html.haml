    = csrf_meta_tags
  %body
    :css
      .navbar .navbar-nav {
        display: inline-block;
        float: none;
      }

      .navbar .navbar-collapse {
        text-align: center;
      }
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"} SetPlaylist
        .navbar-collapse.collapse
          / %form.navbar-form.navbar-right{role: "form"}
          /   .form-group
          /     %input.form-control{placeholder: "Email", type: "text"}/
          /   .form-group
          /     %input.form-control{placeholder: "Password", type: "password"}/
          /   %button.btn.btn-success{type: "submit"} Sign in

    = yield
    %hr
    %center
      %footer
        %p www.ryanlevi.com
